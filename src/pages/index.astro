---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/Hero.astro'
import Banner from '../components/Banner.astro'
import Feature from  '../components/Feature.astro'

const links = [
  {
    link: "https://www.globo.com/",
    image: "/images/companies/logo-globo.png",
    alt: 'Globo.com',
  },
  {
    link: "https://contaazul.com/",
    image: "/images/companies/logo-conta-azul.png",
    alt: 'Conta Azul',
  },
  {
    link: "https://www.mastercard.com.br/",
    image: "/images/companies/logo-mastercard.png",
    alt: 'MasterCard',
  },
  {
    link: "https://sizebay.com/",
    image: "/images/companies/logo-sizebay.png",
    alt: 'Sizebay',
  },
  {
    link: "https://www.guiabolso.com.br/",
    image: "/images/companies/logo-guia-bolso.png",
    alt: 'Guia Bolso',
  },
]

const whatWeDo = [
  {
    icon: '/images/icons/icon-lauch.png',
    title: 'Aplicativos',
    description: 'Nós criamos excelentes aplicativos para Android/iOS utilizando tecnologia de ponta, desenvolvemos soluções fáceis de usar para transformar suas ideias em produtos de sucesso.',
    link: '#',
  },
  {
    icon: '/images/icons/icon-world.png',
    title: 'Desenvolvimento web',
    description: 'Nós desenvolvemos plataformas, websites responsivos e integrações de APIs escaláveis, seguras e de alta performance, para ajudar você a expandir sua presença digital na nuvem.',
    link: '#',
  },
  {
    icon: '/images/icons/icon-person.png',
    title: 'Design UI/UX',
    description: 'Nós entendemos as necessidades do seu negócio e dos seus usuários, criamos fluxos de navegação e protótipos clicáveis de alta fidelidade e interativos para dar vida às suas ideias.',
    link: '#',
  },
]

const howWeDo = [
  {
    icon: '/images/icons/icon-lauch.png',
    title: 'Extensão do seu time',
    description: 'Perfeito para empresas que buscam desenvolvedores para complementar seus times internos. O talento extra que você precisa para alavancar seus projetos de maneira rápida e flexível.',
    link: '#',
  },
  {
    icon: '/images/icons/icon-world.png',
    title: 'Desenvolvimento ponta a ponta',
    description: 'Quando se tem uma ideia incrível para um produto, mas precisa de um time para torná-la possível. Alocamos uma equipe de experts dedicada para o desenvolvimento e design de toda a aplicação.',
    link: '#',
  },
]
---

<Layout title="Informant">
  <Hero />
  <Banner links={links} />
  <Feature title="O que fazemos" features={whatWeDo} />
  <Banner text="Mais de 10 anos de experiência na indústria de terceirização de desenvolvimento de software." />
  <Feature title="Como fazemos" features={howWeDo} />
  <Banner text="Trabalhamos lado a lado com nossos clientes para ajudá-los a fazer investimentos estratégicos em TI e alavancar seus negócios." />
</Layout>
