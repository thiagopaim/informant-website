<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
<script>
  const validateEmail = (email: string) => {
    return String(email)
      .toLowerCase()
      .match(/^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|.(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/)
  }

  emailjs.init('FQG9dgFZ0BhaljxA6')
  const form: HTMLFormElement = document.getElementById('form')
  const success = document.getElementById('success')
  const errors: HTMLElement = document.getElementById('errors')
  const button: HTMLInputElement = document.getElementById('submit')
  const serviceID = 'service_uo3m7md';
   const templateID = 'template_6axxtoc';
  form?.addEventListener('submit', (event) => {
    event.preventDefault()

    let error = ''

    if (!form.name.value) error += 'O campo nome √© obrigat√≥rio <br />'
    if (!form.email.value) error += 'O campo email √© obrigat√≥rio <br />'
    if (!validateEmail(form.email.value)) error += 'O campo e-mail parece inv√°lido <br />'
    if (!form.budget.value) error += 'Selecione um or√ßamento <br />'

    errors.innerHTML = error

    if (errors.innerHTML !== '') return

    button.value = 'Enviando...'

    emailjs.sendForm(serviceID, templateID, form)
      .then(() => {
        form.classList.add('hide')
        success?.classList.remove('hide')
      }, (err: any) => {
        button.value = 'Enviar';
        alert(JSON.stringify(err));
      })
  })
</script>

